{
  "extends": [
    "tslint:latest",
    "tslint-config-airbnb",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "rules": {
    "prettier": true,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ],
    "object-shorthand-properties-first": false,
    "member-access": false,
    "no-implicit-dependencies": false,
    "array-type": false,
    "no-submodule-imports": [
      true,
      "@baselayer"
    ],
    "import-name": false
  }
}
